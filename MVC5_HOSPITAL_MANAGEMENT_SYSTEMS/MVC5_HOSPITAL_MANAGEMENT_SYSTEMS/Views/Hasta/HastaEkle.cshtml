@model MVC5_HOSPITAL_MANAGEMENT_SYSTEMS.Models.Hasta
@{
    ViewBag.Title = "HastaEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<link href="~/Content/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/assets/vendors/select2/select2.min.css" rel="stylesheet" />
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hasta Ekleme Formu</h4>
            <p class="card-description">Gerekli bilgileri giriniz... </p>


            @using (Html.BeginForm("HastaEkle", "Hasta", FormMethod.Post))
            {

                <form class="forms-sample">

                    <div class="form-group">
                        <label>File upload</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button">Upload</button>
                            </span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="exampleInputEmail3"> TCKNO</label>
                        @Html.TextBoxFor(p => p.TCKNO, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.TCKNO)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Adı</label>
                        @Html.TextBoxFor(p => p.Ad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Ad)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Soyadı</label>
                        @Html.TextBoxFor(p => p.Soyad, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Soyad)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yaş</label>
                        @Html.TextBoxFor(p => p.Yas, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Yas)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Telefon Numarası</label>
                        @Html.TextBoxFor(p => p.TelefonNo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.TelefonNo)
                    </div>

                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.TextBoxFor(p => p.Sifre, new { @class = "form-control" })
                        @Html.ValidationMessageFor(p => p.Sifre)
                    </div>
                        <div style="margin-bottom:25px;"> </div>
                        <button class="btn btn-info">Hasta Ekle</button>

                        @Html.ActionLink("Cancel", "Hasta", "Hasta", null, new { @class = "btn btn-dark" })

</form>

                }
        </div>
    </div>
</div>
<script src="~/Content/assets/vendors/select2/select2.min.js"></script>
<script src="~/Content/assets/vendors/typeahead.js/typeahead.bundle.min.js"></script>

<script src="~/Content/assets/js/select2.js"></script>
<script src="~/Content/assets/js/typeahead.js"></script>
<script src="~/Content/assets/js/file-upload.js"></script>
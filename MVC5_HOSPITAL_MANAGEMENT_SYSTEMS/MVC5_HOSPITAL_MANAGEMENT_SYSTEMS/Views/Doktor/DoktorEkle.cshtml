@model MVC5_HOSPITAL_MANAGEMENT_SYSTEMS.Models.Doktor
@{
    ViewBag.Title = "DoktorEkle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/assets/vendors/select2-bootstrap-theme/select2-bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/vendors/select2/select2.min.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <title>Doktor Ekleme Formu</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Doktor Ekleme Formu</h4>
                        <p class="card-description">Gerekli bilgileri giriniz...</p>

                        @using (Html.BeginForm("DoktorEkle", "Doktor", FormMethod.Post))
                        {
                            <div class="forms-sample">

                                <!-- Poliklinik -->
                                <div class="form-group mb-3">
                                    <label for="Poliklinik" class="form-label">Poliklinik</label>
                                    @Html.TextBoxFor(p => p.Poliklinik, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.Poliklinik, "", new { @class = "text-danger" })
                                </div>

                                <!-- TCKNO -->
                                <div class="form-group mb-3">
                                    <label for="TCKNO" class="form-label">TCKNO</label>
                                    @Html.TextBoxFor(p => p.TCKNO, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.TCKNO, "", new { @class = "text-danger" })
                                </div>

                                <!-- Adı -->
                                <div class="form-group mb-3">
                                    <label for="Ad" class="form-label">Adı</label>
                                    @Html.TextBoxFor(p => p.Ad, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.Ad, "", new { @class = "text-danger" })
                                </div>

                                <!-- Soyadı -->
                                <div class="form-group mb-3">
                                    <label for="Soyad" class="form-label">Soyadı</label>
                                    @Html.TextBoxFor(p => p.Soyad, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.Soyad, "", new { @class = "text-danger" })
                                </div>

                                <!-- Doğum Tarihi -->
                                <div class="form-group mb-3">
                                    <label for="DogumTarihi" class="form-label">Doğum Tarihi</label>
                                    @Html.TextBoxFor(p => p.DogumTarihi, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.DogumTarihi, "", new { @class = "text-danger" })
                                </div>

                                <!-- Telefon Numarası -->
                                <div class="form-group mb-3">
                                    <label for="TelefonNo" class="form-label">Telefon Numarası</label>
                                    @Html.TextBoxFor(p => p.TelefonNo, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.TelefonNo, "", new { @class = "text-danger" })
                                </div>

                                <!-- Şifre -->
                                <div class="form-group mb-3">
                                    <label for="Sifre" class="form-label">Şifre</label>
                                    @Html.TextBoxFor(p => p.Sifre, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(p => p.Sifre, "", new { @class = "text-danger" })
                                </div>

                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-primary">Doktor Ekle</button>
                                    @Html.ActionLink("Cancel", "Doktor", "Doktor", null, new { @class = "btn btn-dark" })
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

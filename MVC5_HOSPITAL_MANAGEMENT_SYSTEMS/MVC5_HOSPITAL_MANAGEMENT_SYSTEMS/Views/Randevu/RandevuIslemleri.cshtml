
@{
    ViewBag.Title = "RandevuAnasayfa";
    Layout = "~/Views/Shared/_Anasayfa.cshtml";
}


<div class="container mt-5" style="max-width: 1000px; margin: 0 auto; padding-top: 200px; padding-bottom: 100px;">
    <h2 class="text-center mb-4">Randevu İşlemleri</h2>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h5 class="card-title">Randevu Oluştur</h5>
                    <p class="card-text">Yeni bir randevu oluşturmak için aşağıdaki butona tıklayın.              </p>
                    <a href="@Url.Action("RandevuVer", "Randevu")" class="btn btn-primary">Randevu Oluştur</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h5 class="card-title">Randevuları Görüntüle</h5>
                    <p class="card-text">Mevcut randevularınızı görüntülemek için aşağıdaki butona tıklayın.</p>
                    <a href="@Url.Action("RandevuGoster", "Randevu")" class="btn btn-secondary">Randevuları Görüntüle</a>
                </div>
            </div>
        </div>
    </div>
</div>




@model MVC5_HOSPITAL_MANAGEMENT_SYSTEMS.Models.VmModels.HareketVM


@{
    ViewBag.Title = "Anasayfa";
    Layout = "~/Views/Shared/AdminLayout.cshtml";

}
<div class="container content">


    <div class="row">
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@Model.admins.Count</h3>
                                <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success ">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Admin Sayısı</h6>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@Model.personels.Count</h3>
                                <p class="text-success ml-2 mb-0 font-weight-medium">+11%</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Personel Sayısı</h6>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@Model.Hastas.Count</h3>
                                <p class="text-danger ml-2 mb-0 font-weight-medium">-2.4%</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-danger">
                                <span class="mdi mdi-arrow-bottom-left icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Üye Sayısı</h6>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-9">
                            <div class="d-flex align-items-center align-self-start">
                                <h3 class="mb-0">@Model.doktors.Count</h3>
                                <p class="text-success ml-2 mb-0 font-weight-medium">+3.5%</p>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="icon icon-box-success ">
                                <span class="mdi mdi-arrow-top-right icon-item"></span>
                            </div>
                        </div>
                    </div>
                    <h6 class="text-muted font-weight-normal">Doktor Sayısı</h6>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- CRUD İşlemleri -->
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                        <h4 class="card-title mb-1">CRUD İşlemleri</h4>
                        <p class="text-muted mb-1">her şey yerli yerinde</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="preview-list">
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-primary">
                                            <i class="mdi mdi-plus-box"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Doktorlar</h6>
                                            <p class="text-muted mb-0">Doktorların CRUD İşlemleri</p>
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            <p class="text-muted">
                                                @Html.ActionLink("Doktor Ekle", "DoktorEkle", "Doktor","Doktor", new { @class = "btn btn-info" })
                                            </p>
                                            <p class="text-muted mb-0">
                                                @Html.ActionLink("Doktor Sayfası", "Doktor", "Doktor", "Doktor", new { @class = "btn btn-success" })
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-success">
                                            <i class="mdi mdi-account-multiple-outline"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Personeller</h6>
                                            <p class="text-muted mb-0">Personellerin CRUD İşlemleri</p>
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            <p class="text-muted">
                                                @Html.ActionLink("Personel Ekle", "PersonelEkle", "Personel","Personel", new { @class = "btn btn-info" })
                                            </p>
                                            <p class="text-muted mb-0">
                                                @Html.ActionLink("Personel Sayfası", "Personel", "Personel", "Personel", new { @class = "btn btn-success" })
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-info">
                                            <i class="mdi mdi-account-outline"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">Üyeler</h6>
                                            <p class="text-muted mb-0">Üyelerin CRUD İşlemleri</p>
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            <p class="text-muted">
                                                @Html.ActionLink("Üye Ekle", "HastaEkle", "Hasta","Hasta", new { @class = "btn btn-info" })
                                            </p>
                                            <p class="text-muted mb-0">
                                                @Html.ActionLink("Üye Sayfası", "Hasta","Hasta","Hasta", new { @class = "btn btn-success" })
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="preview-item border-bottom">
                                    <div class="preview-thumbnail">
                                        <div class="preview-icon bg-danger">
                                            <i class="mdi mdi-heart"></i>
                                        </div>
                                    </div>
                                    <div class="preview-item-content d-sm-flex flex-grow">
                                        <div class="flex-grow">
                                            <h6 class="preview-subject">İlaçlar</h6>
                                            <p class="text-muted mb-0">İlaçların CRUD İşlemleri</p>
                                        </div>
                                        <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                            <p class="text-muted">
                                                @Html.ActionLink("İlaç Ekle", "MedicineEkle", "Medicine","Medicine", new { @class = "btn btn-info" })
                                            </p>
                                            <p class="text-muted mb-0">
                                                @Html.ActionLink("İlaç Sayfası", "Medicine","Medicine","Medicine", new { @class = "btn btn-success" })
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div> <!-- .preview-list -->
                        </div> <!-- .col-12 -->
                    </div> <!-- .row -->
                </div> <!-- .card-body -->
            </div> <!-- .card -->
        </div> <!-- .col-md-8 -->
        <!-- Gelen Yorumlar -->
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-row justify-content-between">
                        <h4 class="card-title">Gelen Yorumlar</h4>
                        <a href="@Url.Action("Iletisim","Admin")"> <p class="text-muted mb-1 small">Tümünü Gör</p></a>
                    </div>
                    <div class="preview-list">
                        <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                                <img src="~/Content/assets/images/faces/face8.jpg" alt="image" class="rounded-circle" />
                            </div>
                            <div class="preview-item-content d-flex flex-grow">
                                <div class="flex-grow">
                                    <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                        <h6 class="preview-subject">Ahmet Yılmaz</h6>
                                        <p class="text-muted text-small">5 dakika önce</p>
                                    </div>
                                    <p class="text-muted">Hizmetten çok memnun kaldım. Teşekkürler!</p>
                                </div>
                            </div>
                        </div>
                        <!-- Diğer yorumlar buraya eklenecek -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Portfolio Slide -->
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Admin Görevleri</h4>
                    <div class="owl-carousel owl-theme full-width owl-carousel-dash portfolio-carousel" id="owl-carousel-basic">


                        <div class="d-flex py-4">
                            <div class="preview-list w-100">
                                <div class="preview-item p-0">
                                   
                                    <div class="preview-thumbnail">
                                        <img src="~/Content/assets/images/faces/face6.jpg" class="rounded-circle" alt="">
                                    </div>

                                    <div class="preview-item-content d-flex flex-grow">
                                        <div class="flex-grow">
                                            <div class="d-flex d-md-block d-xl-flex justify-content-between">
                                                <h6 class="preview-subject">Admin</h6>
                                                <p class="text-muted text-small">4 saat önce</p>
                                            </div>
                                            <p class="text-muted">Hala çalışıyor</p>
                                            <div class="d-flex flex-row justify-content-between">

                                                <a href="@Url.Action("Yapilacaklar","Admin")"> <p class="text-muted mb-1 small">Görevler</p></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="text-muted">Görevler daha bitmedi </p>
                    <div class="progress progress-md portfolio-progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 50%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- To do list -->
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">To do list</h4>
                    <div class="add-items d-flex">
                        <input type="text" class="form-control todo-list-input" placeholder="görevler..">
                        <button class="add btn btn-primary todo-list-add-btn">Ekle</button>
                    </div>
                    <div class="list-wrapper">
                        <ul class="d-flex flex-column-reverse text-white todo-list todo-list-custom">
                            <li>
                                <div class="form-check form-check-primary">
                                    <label class="form-check-label">
                                        <input class="checkbox" type="checkbox"> Create invoice
                                    </label>
                                </div>
                                <i class="remove mdi mdi-close-box"></i>
                            </li>
                            <!-- Diğer görevler buraya eklenecek -->
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/Content/assets/calendar/js/main.js"></script>
<script src="js/jquery.min.js"></script>
<script src="~/Content/assets/calendar/js/popper.js"></script>

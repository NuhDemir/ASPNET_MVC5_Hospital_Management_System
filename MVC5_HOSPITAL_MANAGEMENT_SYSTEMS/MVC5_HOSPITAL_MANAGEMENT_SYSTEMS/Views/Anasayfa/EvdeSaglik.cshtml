<section class="py-6 bg-gray-100">
    <div class="container">
        <div class="row align-items-center">
            <!-- Image Section -->
            <div class="col-lg-6">
                <div class="d-flex align-items-center justify-content-center position-relative rounded py-17 border-gray-100 border border-4 rounded-3 bg-cover" style="background-image: url('/Image/gallery/gallery-1.jpg'); height: 300px;">

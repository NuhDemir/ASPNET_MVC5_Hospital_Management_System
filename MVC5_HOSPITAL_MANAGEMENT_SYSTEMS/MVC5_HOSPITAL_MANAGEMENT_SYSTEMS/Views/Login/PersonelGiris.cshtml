
@model MVC5_HOSPITAL_MANAGEMENT_SYSTEMS.Models.Personel

@{
    ViewBag.Title = "PersonelGiris";
    Layout = "~/Views/Shared/_Anasayfa.cshtml";

}


<div class="container">
    <div>
        <main class="form-signin w-100 my-md-5">
            @using (Html.BeginForm(FormMethod.Post))
            {
                <img class="mb-4" src="~/Content/Anasayfa/assets/img/favicon-32x32.png" alt="" width="72" height="57">
                <h1 class="h3 mb-3 fw-normal">Personel Giriş Sayfası</h1>

                <div>
                    <div class="form-group">
                        @Html.LabelFor(z => z.TCKNO, new { @class = "control-label" ,placeholder = "TC Kimlik Numarası:" })
                        @Html.ValidationMessageFor(z => z.TCKNO)
                        @Html.TextBoxFor(z => z.TCKNO, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(z => z.Sifre, new { @class = "control-label" })
                    @Html.ValidationMessageFor(z => z.Sifre)
                    @Html.PasswordFor(z => z.Sifre, new { @class = "form-control" })
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit">Giriş yap</button>

                <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2024</p>
            }
        </main>
    </div>
</div>
